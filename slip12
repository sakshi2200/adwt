a]
db.movies.find().sort({ budget: -1 }).limit(1);


b]
db.movies.aggregate([
  { $group: {
      _id: { producer_id: "$producers", year: "$year" },
      movieCount: { $sum: 1 }
    }
  },
  { $match: { movieCount: { $gt: 1 } } },
  {
    $lookup: {
      from: "producers",
      localField: "_id.producer_id",
      foreignField: "producer_id",
      as: "producer_details"
    }
  }
]);


c]
let akshayMovies = db.movies.find({ actors: 1 }).toArray();


d]
db.movies.find(
  { $expr: { $gt: [ { $size: "$producers" }, 1 ] } },
  { title: 1, producers: 1 }
);

