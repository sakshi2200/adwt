db.customers.find({ first_name: /^D/ }).forEach(customer => print(customer.first_name + " " + customer.last_name));

db.loans.find({ loan_city: "Pimpri" })
    .sort({ "loan_amount": -1 })  // Optionally, you can sort by loan amount or another field
    .forEach(loan => {
        var customer = db.customers.findOne({ customer_id: loan.customer_id });
        print(customer.first_name + " " + customer.last_name);
    });


var maxLoan = db.loans.find().sort({ loan_amount: -1 }).limit(1).toArray()[0];
var customer = db.customers.findOne({ customer_id: maxLoan.customer_id });
printjson(customer);

db.customers.update(
